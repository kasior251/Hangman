<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kasia.hangman.WelcomeScreen"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:onClick="langOnClick"
            android:text="@string/lang"
            android:background="@drawable/button"
            style="@style/welcomeScreenButton"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:onClick="rulesOnClick"
            android:text="@string/rules"
            android:background="@drawable/button"
            style="@style/welcomeScreenButton"/>

        <Button
            android:id="@+id/newGame"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:onClick="startOnClick"
            android:text="@string/start"
            android:background="@drawable/button"
            style="@style/welcomeScreenButton"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:onClick="statsOnClick"
            android:text="@string/stats"
            android:background="@drawable/button"
            style="@style/welcomeScreenButton"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:onClick="quitOnClick"
            android:text="@string/stop"
            android:background="@drawable/button"
            style="@style/welcomeScreenButton"/>

    </LinearLayout>

</LinearLayout>